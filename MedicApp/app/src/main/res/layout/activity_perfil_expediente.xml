<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/perfil"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/nombre_paciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/perfil"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="30dp"
        android:hint="Nombre"
        android:textColor="#000"
        android:textSize="22sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/nombre_paciente"
        android:layout_marginLeft="10dp"
        android:hint="TelÃ©fono"
        android:textColor="#a9a9a9"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/telefono"
        android:layout_marginLeft="10dp"
        android:hint="Correo"
        android:textColor="#a9a9a9"
        android:textSize="18sp"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="310dp"
        android:id="@+id/scrollViewRecyclerView"
        android:layout_below="@id/correo">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerViewHistorial"
            android:layout_marginTop="25dp"
            />
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_below="@id/scrollViewRecyclerView"
        android:layout_centerHorizontal="true"
        android:text="Diagnosticar" />

</RelativeLayout>
