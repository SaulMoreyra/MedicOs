<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/perfil"
            android:src="@drawable/user"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nombre_paciente"
            android:textSize="22sp"
            android:hint="Nombre"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@id/perfil"
            android:layout_toEndOf="@id/perfil"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/direccion_paciente"
            android:textSize="18sp"
            android:hint="DirecciÃ³n"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_toRightOf="@id/perfil"
            android:layout_toEndOf="@id/perfil"
            android:layout_below="@id/nombre_paciente"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hora_cita"
            android:textSize="18sp"
            android:hint="Hora"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_toRightOf="@id/perfil"
            android:layout_toEndOf="@id/perfil"
            android:layout_below="@id/direccion_paciente"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:id="@+id/flecha"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/nombre_paciente"
            android:src="@drawable/arrow" />
    </RelativeLayout>


</androidx.cardview.widget.CardView>