<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/opt_round_card_view_light_background"
    app:cardCornerRadius="10dp" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_margin="8dp"
    android:background="#FAFAFA"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/notas" />

    <LinearLayout
        android:layout_width="267dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nombreAntecedente"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="5sp"
            android:text="TextView"
            android:textColor="@color/opt_round_card_view_dark_background"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descAntecedente"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="TextView"
            android:textColor="@color/opt_round_card_view_dark_background"
            android:textSize="16sp" />
    </LinearLayout>

    <Button
        android:id="@+id/editar"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_login_background"
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:text="Editar" />


</LinearLayout>
</androidx.cardview.widget.CardView>